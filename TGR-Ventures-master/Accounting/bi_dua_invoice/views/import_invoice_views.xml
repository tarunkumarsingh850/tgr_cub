<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="import_invoice_view_form" model="ir.ui.view">
        <field name="name">import.invoice.view.form</field>
        <field name="model">import.invoice</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Submit" name="submit" type="object" class="oe_highlight" states="draft"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="move_id" domain="[('is_service_bill','=',True),('move_type','=','in_invoice')]"/>
                            <field name="ref"/>
                            <field name="vendor_id" domain="[('is_supplier','=',True)]"/>
                            <field name="amount"/>
                            <field name="tax_id" domain="[('type_tax_use','=','purchase')]"/>
                            <field name="amount_total"/>
                        </group>
                        <group>
                            <h3 style="color:red;"><field name="error_message" readonly="1" nolabel="1"/></h3>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="import_invoice_view_tree" model="ir.ui.view">
        <field name="name">import.invoice.view.tree</field>
        <field name="model">import.invoice</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="ref" />
                <field name="date" />
                <field name="move_id" />
                <field name="vendor_id" />
                <field name="amount_total" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="import_invoice_action" model="ir.actions.act_window">
        <field name="name">Import Invoice</field>
        <field name="res_model">import.invoice</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="import_invoice_menu"
        name="Import Invoice"
        action="import_invoice_action"
        parent="account.menu_finance_payables"
        sequence="10"/>

</odoo>
