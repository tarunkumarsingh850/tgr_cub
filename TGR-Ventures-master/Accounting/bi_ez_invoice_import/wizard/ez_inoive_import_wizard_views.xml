<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="ez_invoice_import_wizard_view_form" model="ir.ui.view">
            <field name="name">ez.invoice.import.wizard.view.form</field>
            <field name="model">ez.invoice.import.wizard</field>
            <field name="arch" type="xml">
                <form string="EZ Invoice Import">
                    <sheet>
                        <group>
                            <group>
                                <field name="filename" invisible="1"/>
                                <field name="csv_file" filename="filename"/>
                            </group>
                            <group>
                                <field name="partner_id" required="True"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <button string="Download Template" name="generate_template" type="object"/>
                            </group>
                        </group>
                        <footer>
                            <button string="Upload File" name="generate_update" type="object" class="oe_highlight"/>
                            <button string="Cancel" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ez_invoice_import_wizard_view_form_action" model="ir.actions.act_window">
            <field name="name">EZ Invoice Import</field>
            <field name="res_model">ez.invoice.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_ez_invoice_import"
            name="Invoice Import"
            parent="account_accountant.menu_accounting"/>

        <menuitem
            id="ez_invoice_import_wizard_menu"
            name="EZ Invoice Import"
            action="ez_invoice_import_wizard_view_form_action"
            parent="menu_ez_invoice_import"
            sequence="0"/>


    </data>


</odoo>
