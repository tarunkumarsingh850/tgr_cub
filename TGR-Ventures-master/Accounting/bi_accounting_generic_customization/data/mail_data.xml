<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="email_template_credit_note" model="mail.template">
            <field name="name">Credit Note</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="email_from">{{ (object.user_id.email_formatted) }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="subject">Credit note created for {{object.original_invoice_id.name}}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                        <t t-if="object.partner_id.parent_id">
                            <t t-out="object.partner_id.name or ''"/>
                        </t>
                        <t t-else="">
                            <t t-out="object.partner_id.name or ''"/>,
                        </t>
                        <br/>
                        <br/>
                        Here is your Credit note
                        <t t-if="object.original_invoice_id">
                            (with reference: <t t-out="object.original_invoice_id.name or ''"/>)
                        </t>
                        <br/>
                        <br/>
                        Do not hesitate to contact us if you have any questions.
                        <br/>
                        Thank you,
                    </p>

                </div>
            </field>
            <field name="report_template" ref="bi_invoice_memo_printout.action_report_purchase_voucher"/>
            <field name="report_name">Credit_note_{{ (object.name or '').replace('/','_') }}{{ object.state == 'draft' and '_draft' or '' }}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>
