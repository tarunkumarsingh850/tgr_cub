<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_sale_wise_report" model="ir.actions.client">
            <field name="name">Sale Report</field>
            <field name="tag">category_wise_report</field>
            <field name="context" eval="{'model': 'report.bi_dynamic_sale_report.sale_order_report'}" />
        </record>

        <record id="sale_report_wizard_form" model="ir.ui.view">
            <field name="name">Sale Report</field>
            <field name="model">dynamic.sale.report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date_from" />
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="date_to" />
                            <field name="cost_percentage"/>
                        </group>
                    </group>
                    <footer>
                        <button name="export_xls" type="object" default_focus="1" string="Excel" class="oe_highlight" context="{'xls_export':1}"/>
                        <button name="export_pdf" type="object" default_focus="1" string="PDF" class="oe_highlight" context="{'xls_export':1}"/>
                        <button name="action_view" type="object"
                                class="oe_stat_button" icon="fa-bars" string="View"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="sale_dynamic_sale_wizard_action" model="ir.actions.act_window">
            <field name="name">Sale Report</field>
            <field name="res_model">dynamic.sale.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    <menuitem
        id="dynamic_sale_report_menu_item"
        name="Sale Report"
        action="sale_dynamic_sale_wizard_action"
        parent="sale.menu_sale_report"
        sequence="100"
    />

    </data>
</odoo>
