<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="row_picking_report_wizard_view_form" model="ir.ui.view">
    <field name="name">row.picking.report.wizard.view.form</field>
    <field name="model">row.picking.report.wizard</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <field name="location_id" domain="[('usage', '=', 'internal')]"/>
                    <field name="batch_id"/>
                    </group>
                    <!-- <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group> -->
                </group>
            </sheet>
            <footer>
                <button string="Generate" name="generate_xlsx_report" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-default" special="cancel"/>
            </footer>
        </form>
    </field>
</record>

<record id="action_row_picking_report_wizard" model="ir.actions.act_window">
    <field name="name">RoW Picking Report</field>
    <field name="res_model">row.picking.report.wizard</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<menuitem name="RoW Picking Report" id="menu_row_picking_report" action="action_row_picking_report_wizard" parent="stock.menu_warehouse_report"/>

</odoo>
