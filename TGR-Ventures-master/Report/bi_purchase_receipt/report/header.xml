<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="receipt_header">
            <div class="header">
                <div class="row">
                    <div class="col-6">
                        <table width="100%">
                            <tr width="100%">
                                <td width="50%" style="font-size:13px;word-break:break-word;">
                                    <t t-if="docs.company_id.name">
                                        <span t-field="o.company_id.name"/><br/>
                                    </t>
                                    <t t-if="o.company_id.street">
                                        <span t-field="o.company_id.street"/><br/>
                                    </t>
                                    <t t-if="o.company_id.street2">
                                        <span t-field="o.company_id.street2"/><br/>
                                    </t>
                                    <t t-if="o.company_id.city">
                                        <span t-field="o.company_id.city"/><br/>
                                    </t>
                                    <t t-if="o.company_id.state_id.name">
                                        <span t-field="o.company_id.state_id.name"/>
                                    </t>
                                    <t t-if="o.company_id.zip">
                                        <span t-field="o.company_id.zip"/><br/>
                                    </t>
                                    <t t-if="o.company_id.country_id.name">
                                        <span t-field="o.company_id.country_id.name"/><br/>
                                    </t>
                                    Phone: <t t-if="o.company_id.phone">
                                        <span t-field="o.company_id.phone"/>
                                    </t>
                                </td>
                            </tr>
                        </table>
                    </div>
                   <div class="col-6" style="text-align:right;">
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height:70px;max-width:90%" alt="Company Logo"/>
                    </div>
                </div>
            </div><br/>
            <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout" />
                <t t-raw="0" />
            </div><br/><br/>
            <div class="footer">
                <div class="row">
                    <div class="col-12" style="vertical-align:middle;text-align:center;border-bottom:2px solid black;">
                    </div>
                </div>
                <br/>
                <div class="row" style="padding-right:1px;padding-top:1px;font-size:13px">
                    <div class="col-8" align="left" style="padding-left:26px;">

                    </div>
                    <div class="col-4" align="right" style="font-size:13px">
                        Page:
                        <span class="page" />
                        of
                        <span class="topage" />
                    </div>
                </div>
            </div>
        </template>

    </data>
</odoo>
