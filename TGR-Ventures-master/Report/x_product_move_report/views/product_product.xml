<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_product_activity_button" model="ir.ui.view">
        <field name="name">product.template.product.activity.button</field>
        <field name="model">product.template</field>
        <field name="priority">56</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_product_activity_report_html" type="object" icon="fa-list-alt">
                    <span class="o_stat_text">
                        Product Activity
                    </span>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
