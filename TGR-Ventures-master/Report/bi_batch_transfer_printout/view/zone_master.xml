<odoo>
  <data>
    <record id="zone_master_view_form" model="ir.ui.view">
      <field name="name">zone.master.view.form</field>
      <field name="model">zone.master</field>
      <field name="arch" type="xml">
        <form string="Zone Master">
          <header>
          </header>
          <sheet>
            <group>
                <group>
                  <field name="name"/>
                  <field name="number" required="1"/>
                  <field name="company_id"/>
                  <field name="location_id"/>
                  <field name="is_mixed"/>
                </group>
                <group attrs="{'invisible': [('is_mixed', '=', True)]}">
                  <field name="is_product"/>
                  <field name="brand_ids" widget="many2many_tags" attrs="{'invisible': [('is_product', '=', True)]}"/>
                  <field name="product_ids" widget="many2many_tags" attrs="{'invisible': [('is_product', '=', False)]}"/>
                </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="zone_master_view_tree" model="ir.ui.view">
      <field name="name">zone.master.view.tree</field>
      <field name="model">zone.master</field>
      <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="number"/>
                <field name="brand_ids" widget="many2many_tags"/>
                <field name="company_id"/>
                <field name="location_id"/>
            </tree>
        </field>
      </record>

    <record id="zone_master_action" model="ir.actions.act_window">
      <field name="name">Zone Master</field>
      <field name="res_model">zone.master</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create a record
        </p>
      </field>
    </record>

    <menuitem
      id="zone_master_menu"
      name="Zone Master"
      action="zone_master_action"
      parent="stock.menu_stock_config_settings"
      sequence="100"/>

  </data>
</odoo>
