<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="purchase_wizard_view_form" model="ir.ui.view">
            <field name="name">purchase.wizard.form</field>
            <field name="model">purchase.wizard</field>
            <field name="arch" type="xml">
                <form string="Purchase Wizard">
                    <group>
                        <group>
                        </group>
                        <field name="agreement_line_ids">
                            <tree editable="bottom" create="false" >
                                <field name="product_id" readonly="1" force_save="1"/>
                                <field name="vendor_id" readonly="1" force_save="1"/>
                                <field name="uom_id" readonly="1" force_save="1"/>
                                <field name="description_name" readonly="1" force_save="1"/>
                                <field name="quantity" readonly="1" force_save="1"/>
                                <field name="unit_price" readonly="1" force_save="1" />
                                <field name="price_subtotal" readonly="1" force_save="1"/>
                                <field name="sale_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="create_pur_agreement" string="Create" type="object" class="btn-primary" />
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="purchase_wizard_action" model="ir.actions.act_window">
            <field name="name">Purchase Wizard</field>
            <field name="res_model">purchase.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="sale_order_view_inherit" model="ir.ui.view">
            <field name="name">sale.order.view.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="widget">one2many_selectable</attribute>
                </xpath>
            </field>
          </record>

    </data>
</odoo>
