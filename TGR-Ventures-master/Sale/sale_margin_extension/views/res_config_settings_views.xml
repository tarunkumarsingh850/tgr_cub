<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Res config settings form view customizations-->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <field name="module_sale_margin" position="replace">
                <field name="module_sale_margin_extension"/>
            </field>

            <label for="module_sale_margin" position="replace">
                <label for="module_sale_margin_extension"/>
            </label>

        </field>
    </record>

</odoo>
