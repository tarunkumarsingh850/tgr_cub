<odoo>
  <data>

    <record id="sale_type_form" model="ir.ui.view">
      <field name="name">sale.type.view.form</field>
      <field name="model">sale.type</field>
      <field name="arch" type="xml">
        <form string="Order Type">
          <header>
          </header>
          <sheet>
            <group>
                <group>
                  <field name="code"/>
                  <field name="name"/>
                </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="sale_type_view_tree" model="ir.ui.view">
      <field name="name">sale.type.view.tree</field>
      <field name="model">sale.type</field>
      <field name="arch" type="xml">
            <tree default_order="create_date desc">
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
      </record>

    <record id="sale_type_action" model="ir.actions.act_window">
      <field name="name">Order Type</field>
      <field name="res_model">sale.type</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create a record
        </p>
      </field>
    </record>

    <menuitem
      id="sale_type_menu"
      name="Order Type"
      action="sale_type_action"
      parent="sale.menu_sale_config"
      sequence="100"/>

  </data>
</odoo>
