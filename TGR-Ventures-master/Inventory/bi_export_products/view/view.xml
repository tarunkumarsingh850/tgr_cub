<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
       <record id="action_product_template_export" model="ir.actions.server">
        <field name="name">Export Products</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list</field>
        <field name="code">action = records.action_export_template()
        </field>
    </record>

    <record id="product_template_view_tree_inherit" model="ir.ui.view">
        <field name="name">product.template.view.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Export" name="action_export_template" type="object" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    </data>
</odoo>
