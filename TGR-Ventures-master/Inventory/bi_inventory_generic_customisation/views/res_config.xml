<odoo>
  <data>

    <record id="res_config_settings_view_form_replenishment" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.replenishment</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="25"/>
      <field name="inherit_id" ref="bi_kit_assembly.res_config_settings_inherit_kit_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]/div[@data-key='stock']" position="inside">
          <h2 >Last Week</h2>
          <div class="row mt16 o_settings_container">
              <div class="col-12 col-lg-6 o_setting_box">
                  <div class="o_setting_right_pane">
                      <label for="last_days"/>
                      <div class="row">
                          <div class="text-muted col-lg-8">
                          </div>
                      </div>
                      <div class="content-group">
                          <div class="mt16">
                              <field name="last_days" required="1"
                                  class="o_light_label"
                                  placeholder="Week (Reporting Purpose)"/>
                          </div>
                      </div>
                  </div>
              </div>
          </div>

          <h2 >Product Days</h2>
          <div class="row mt16 o_settings_container">
              <div class="col-12 col-lg-6 o_setting_box">
                  <div class="o_setting_right_pane">
                      <label for="product_days"/>
                      <div class="row">
                          <div class="text-muted col-lg-8">
                          </div>
                      </div>
                      <div class="content-group">
                          <div class="mt16">
                              <field name="product_days" required="1"
                                  class="o_light_label"
                                  placeholder="Product Days"/>
                          </div>
                      </div>
                  </div>
              </div>
          </div>

          <h2 >Product Inventory Account</h2>
          <div class="row mt16 o_settings_container">
              <div class="col-12 col-lg-6 o_setting_box">
                  <div class="o_setting_right_pane">
                      <label for="product_inventory_account_id"/>
                      <div class="row">
                          <div class="text-muted col-lg-8">
                          </div>
                      </div>
                      <div class="content-group">
                          <div class="mt16">
                              <field name="product_inventory_account_id" required="1"
                                  class="o_light_label"
                                  placeholder="Product Inventory Account"/>
                          </div>
                      </div>
                  </div>
              </div>
          </div>


        </xpath>
      </field>
  </record>

  </data>
</odoo>
