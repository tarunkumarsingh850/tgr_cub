<odoo>
  <data>
    <record model="ir.ui.view" id="stock_move_line1_view_inherit_form">
        <field name="name">stock.move.line1.view.inherit.form</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="///field[@name='product_id']" position="after">
              <field name="brand_id"/>
              <field name="move_id" optional='show'/>
              <field name="picking_id" optional='show'/>
              <field name="origin"/>
          </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_move_line_view_search_filter_inherit_form">
      <field name="name">stock.line.moves1.view.inherit.filter.form</field>
      <field name="model">stock.move.line</field>
      <field name="inherit_id" ref="stock.stock_move_line_view_search"/>
      <field name="arch" type="xml">
          <xpath expr="///field[@name='product_id']" position="after">
            <field name="brand_id"/>
            <field name='origin'/>
          </xpath>
          <xpath expr="//search/group" position="inside">
            <filter string="Brand" name="by_brand" domain="[]"  context="{'group_by': 'brand_id'}"/>
             <filter string="Source" name="by_origin" domain="[]"  context="{'group_by': 'custom_origin'}"/>
          </xpath>
      </field>
  </record>

  <record id="view_stock_move_line_detailed_operation_tree_inherit_product_sku" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_sku"/>
            </xpath>
        </field>
    </record>
  </data>
</odoo>
