<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="0">
        <record id="view_cancel_picking" model="ir.ui.view">
            <field name="name">Cancel</field>
            <field name="model">picking.cancel</field>
            <field name="arch" type="xml">
             <form string="cancel">
                <group>
                    <field name="reason"/>
                    <field name="picking_id" invisible="1"/>
                </group>
                <footer>
                    <button string="Confirm" name="confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
            </field>
        </record>

        <record id="action_cancel_picking" model="ir.actions.act_window">
            <field name="name">Cancel Picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">picking.cancel</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_cancel_picking"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
