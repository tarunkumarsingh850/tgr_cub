<odoo>
  <data>
    <record id="inherit_stock_picking_tree" model="ir.ui.view" >
        <field name="name">stock.picking.view.inherit.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="is_mixed_zone" invisible="1"/>
                <field name="zone_id" decoration-primary="is_mixed_zone == True"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_stock_picking_form" model="ir.ui.view" >
        <field name="name">stock.picking.view.inherit.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="zone_id" invisible="1"/>
            </xpath>
        </field>
    </record>

     <!-- Inherited Search View Section -->
    <record id="zone_view_stock_picking_filter_ept" model="ir.ui.view">
        <field name="name">stock.picking.search</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='status']" position="after">
                <field name="zone_id"/>
                <separator/>
                <filter string="Zone" name="zone_id" domain="[]" context="{'group_by':'zone_id'}" />
                <separator/>
            </xpath>
        </field>
    </record>


  </data>
</odoo>
