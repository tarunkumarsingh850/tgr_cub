<odoo>
    <data>

        <record id="res_config_settings_view_form_sms_gateway" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sms.gateway</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="70"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]/div[@data-key='stock']" position="inside">
                    <h2>SMS Gateway</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="account_sid"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="account_sid"
                                            class="o_light_label"/>
                                    </div>
                                </div>
                                <label for="account_auth_token"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="account_auth_token"
                                            class="o_light_label"/>
                                    </div>
                                </div>
                                <label for="from_number"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="from_number"
                                            class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
