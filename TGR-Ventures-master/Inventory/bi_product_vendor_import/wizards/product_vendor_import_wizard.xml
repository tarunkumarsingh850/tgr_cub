<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_vendor_import_wizard_view_form" model="ir.ui.view">
        <field name="name">product.vendor.import.wizard.view.form</field>
        <field name="model">product.vendor.import.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="file"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Import" name="confirm" type="object" class="oe_highlight"/>
                    <button string="Download Template" name="export_template" type="object"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="product_vendor_import_wizard_action" model="ir.actions.act_window">
        <field name="name">Product Vendor Import</field>
        <field name="res_model">product.vendor.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="product_vendor_import_menu"
        name="Product Vendor Import"
        action="product_vendor_import_wizard_action"
        parent="bi_barcode.menu_update_sales_price"
        sequence="10"/>

</odoo>
