<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_skynet_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.skynet.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Skynet" string="Skynet" data-key="skynet">
                    <h2>Skynet</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="skynet_api_url" string="Skynet API URL"/>
                                <div class="text-muted"/>
                                <field name="skynet_api_url"/>
                                <div class="text-muted"/>
                                <span>Avoid adding a '/' at the end of the url.</span>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
