<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="skynet_report_header">
            <div class="header">
                <div>
                    <div style="font-size:20px;border-top:1px solid black;border-bottom:1px solid black;">
                        <b>Manifest</b>
                    </div>
                </div>
                <br/>
                <div>
                    <div class="row">
                        <div class="col-2">consigned From :</div>
                        <div class="col-3">
                            <t if="o.company_id.name">
                                <t t-esc="o.company_id.name"/><br/>
                            </t>
                            <t if="o.company_id.street">
                                <t t-esc="o.company_id.street"></t><br/>
                            </t>
                            <t if="o.company_id.street2">
                                <t t-esc="o.company_id.street2"></t><br/>
                            </t>
                            <t if="o.company_id.state_id.name">
                                <t t-esc="o.company_id.state_id.name"></t><br/>
                            </t>
                            Phone:
                            <t if="o.company_id.name">
                                <t t-esc="o.company_id.phone"></t>
                            </t><br/>
                            VAT Number:
                            <t if="o.company_id.vat">
                                <t t-esc="o.company_id.vat"></t><br/>
                            </t>
                        </div>
                        <div class="col-3">
                            Date:<t t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/>
                            <br/>
                            Run ID:00
                        </div>
                        <div class="col-5">
                            <img src="bi_skynet_integration/static/src/img/skynet_logo.jpg"  width="300" height="100" />
                        </div>
                    </div>
                </div>
                <br/>
                    <div>
                        <div class="row" style="font-size:15px">
                            <div class="col-3">
                                Compamy Name : <t t-esc="o.company_id.name"/>
                            </div>
                            <div class="col-4">
                                Account #: SMA--
                            </div>
                            <div class="col-1">
                                cons: <t t-esc="len(o.get_picking_value())"/>
                            </div>
                            <div class="col-2">
                                Pieces: <t t-esc="total_pcs"/>
                            </div>
                            <div class="col-3">
                                Weight: <t t-esc="total_weight"/>
                            </div>
                        </div>
                    </div>
            </div>
                    <br/><br/>
                <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                    <t t-call="web.address_layout" />
                    <t t-raw="0" />
                </div>
            <div class="footer">
                <div class="row" style="padding-right:1px;padding-top:1px;font-size:13px">
                    <div class="col-11"></div>
                    <div class="col-1" align="center" style="font-size:13px">
                        <span class="page" />/<span class="topage" />
                    </div>
                </div>
            </div>

        </template>

        </data>
    </odoo>
