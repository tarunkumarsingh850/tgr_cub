<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="despatchlab_product_view_tree" model="ir.ui.view">
        <field name="name">despatchlab.product.view.tree</field>
        <field name="model">despatchlab.product</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="odoo_product_sku" required="1"/>
                <field name="despatchlab_product_id" required="1"/>
            </tree>
        </field>
    </record>

    <record id="despatchlab_product_view_search" model="ir.ui.view">
        <field name="name">despatchlab.product.view.search</field>
        <field name="model">despatchlab.product</field>
        <field name="arch" type="xml">
            <search>
                <field name="odoo_product_sku"/>
                <field name="despatchlab_product_id"/>
            </search>
        </field>
    </record>

    <record id="despatchlab_product_action" model="ir.actions.act_window">
        <field name="name">Despatchlab Product</field>
        <field name="res_model">despatchlab.product</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        id="despatchlab_product_menu"
        name="Despatch Lab Products"
        action="despatchlab_product_action"
        parent="stock.menu_stock_config_settings"
        sequence="10"/>

</odoo>
