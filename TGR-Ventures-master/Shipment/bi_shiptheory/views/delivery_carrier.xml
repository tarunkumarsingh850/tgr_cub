<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shiptheory_delivery_carrier_form" model="ir.ui.view">
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Ship Theory" attrs="{'invisible': [('delivery_type', '!=', 'shiptheory')]}">
                    <group attrs="{'required': [('delivery_type', '=', 'shiptheory')]}">
                        <group string="Ship Therory credentials">
                            <field name="shiptheory_email"/>
                            <field name="shiptheory_password" password="True"/>
                            <field name="delivery_service"/>
                            <field name="delivery_increment"/>
                            <button type="object" name="shiptheory_send_shipping" string="TEST" invisible="1"/>
                        </group>
                        <group>
                            <field name="enhancement_id"/>
                            <field name="format_id"/>
                            <field name="is_uk_address" string="UK Address"/>
                        </group>

                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
