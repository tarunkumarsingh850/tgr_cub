<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_withcarrier_out_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
        <field name="groups_id" eval="[(4, ref('base.group_no_one'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra']" position="inside">
                <group string="Correos Technical" >
                    <field name="correos_last_request"/>
                    <button type="object" name="correos_send_shipping" string="Generate Correos" invisible="1"/>
                    <field name="correos_last_response"/>
                    <field name="attachment_label" invisible="1"/>
                    <field name="attachment_label_id" invisible="1"/>
                </group>
            </xpath>
            <xpath expr="//header" position="inside">
                <button string="Reprint Correos" name="correos_reprint_label" attrs="{'invisible':[('correos_last_request', '=', False)]}" type="object" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    <record id="view_picking_tree" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                 <field name="attachment_label" widget="binary"/>
            </xpath>
        </field>
    </record>

</odoo>
