<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Ecommerce api log view action-->
    <record id="action_view_ecommerce_api_log" model="ir.actions.act_window">
        <field name="name">Ecommerce API Log</field>
        <field name="res_model">ecommerce.api.log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No logs yet
            </p>
            <p>
                Use the e-commerce API to see the logs
            </p>
        </field>
    </record>

    <!--Ecommerce api log view tree-->
    <record id="ecommerce_api_log_view_tree" model="ir.ui.view">
        <field name="name">ecommerce.api.log.view.tree</field>
        <field name="model">ecommerce.api.log</field>
        <field name="arch" type="xml">
            <tree string="Ecommerce Api Log" create="false" delete="false" edit="false"  decoration-danger="state == 'failed'" decoration-success="state == 'success'">
                <field name="name"/>
                <field name="request_date"/>
                <field name="type"/>
                <field name="sale_order_ids" widget="many2many_tags"/>
                <field name="file_name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--Ecommerce api log view form-->
    <record id="ecommerce_api_log_view_form" model="ir.ui.view">
        <field name="name">ecommerce.api.log.view.form</field>
        <field name="model">ecommerce.api.log</field>
        <field name="arch" type="xml">
            <form string="Ecommerce API Log" create="false" delete="false" edit="false">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="success,failed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="request_date"/>
                            <field name="status_message"/>
                            <field name="sale_order_ids" widget="many2many_tags"/>
                            <field name="type"/>
                            <field name="file_name"/>
                        </group>
                        <group>
                            <field name="body"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Ecommerce api log search view-->
    <record id="ecommerce_api_log_view_search" model="ir.ui.view">
        <field name="name">ecommerce.api.log.view.search</field>
        <field name="model">ecommerce.api.log</field>
        <field name="arch" type="xml">
            <search string="E-Commerce API Log">
                <field name="name"/>
                <field name="sale_order_ids"/>
                <separator/>
                <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                <filter string="Success" name="success" domain="[('state', '=', 'success')]"/>
                <separator/>
                <filter string="Request Date" name="filter_request_date" date="request_date"/>
                <separator/>
                <filter string="API" name="filter_api" domain="[('type', '=', 'api')]"/>
                <filter string="XML" name="filter_xml" domain="[('type', '=', 'xml')]"/>
            </search>
        </field>
    </record>

    <!--Ecommerce Api master menu-->
    <menuitem id="menu_ecommerce_api"
              name="E-Commerce API"
              parent="sale.menu_sale_config"
              groups="base.group_no_one"
              sequence="50"/>

    <!--Menuitem for ecommerce api log-->
    <menuitem id="menu_ecommerce_api_log"
              name='API Log'
              parent='menu_ecommerce_api'
              action="action_view_ecommerce_api_log"
              groups="base.group_no_one"
              sequence="1"/>
</odoo>
