<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_magento_order_data_queue_line_ept_form"
            model="ir.ui.view">
        <field name="name">magento.order.data.queue.line.ept.form</field>
        <field name="model">magento.order.data.queue.line.ept</field>
        <field name="arch" type="xml">
            <form create="0" edit="0">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,done"/>
                </header>
                <field name="sale_order_id" invisible="1"/>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="open_sale_order" class="oe_stat_button"
                                icon="fa-chain" type="object"
                                attrs="{'invisible': [('sale_order_id', '=', False)]}"
                                string="Sale Order">
                        </button>
                    </div>

                    <widget name="web_ribbon" text="Imported"
                            attrs="{'invisible': [('state','!=','done')]}"/>

                    <group>
                        <group>
                            <field name="instance_id"/>
                            <field name="magento_id"/>
                        </group>
                        <group>
                            <field name="queue_id"/>
                            <field name="write_date" string="Last Updated On"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="log" string="Log">
                            <field name="log_lines_ids">
                                <tree create="false" editable="bottom">
                                    <field name="message"/>
                                </tree>
                            </field>
                        </page>
                        <page name="data" string="Order Data">
                            <field name="data"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_queueline_search" model="ir.ui.view">
        <field name="name">queue.line.search</field>
        <field name="model">magento.order.data.queue.line.ept</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="website_id" string="Website"/>
                <field name="company_id" string="Company"/>
                <filter string="Website" name="website_id" domain="[('website_id','=', 'website_id')]"/>
                <filter string="Company" name="company_id" domain="[('company_id','=', 'company_id')]"/>
                <separator/>
                <group expand="0" string="Group By...">
                    <filter string="Website" name="website_id" domain="[]" context="{'group_by':'website_id'}"/>
                    <filter string="Company" name="company_id" domain="[]" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_magento_order_data_queue_line_ept_tree" model="ir.ui.view">
        <field name="name">magento.order.data.queue.line.ept.tree</field>
        <field name="model">magento.order.data.queue.line.ept</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="instance_id"/>
                <field name="queue_id" string="Queue Reference #"/>
                <field name="magento_id"/>
                <field name="website_id"/>
                <field name="company_id"/>
                <field name="processed_at"/>
                <field name="create_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="submenu_queue_line_action" model="ir.actions.act_window">
        <field name="name">Queue Lines</field>
        <field name="res_model">magento.order.data.queue.line.ept</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_magento_order_data_queue_line_ept_tree"/>
        <field name="search_view_id" ref="view_magento_order_data_queue_line_ept_tree"/>
        <field name="domain">[]</field>
        <field name="context">{'group_by':'company_id'}</field>
    </record>

    <menuitem
        id="queue_line_sub_menu"
        name="Order Queue Lines"
        action="submenu_queue_line_action"
        parent="odoo_magento2_ept.menu_magento_log"
        sequence="1"/>
</odoo>
