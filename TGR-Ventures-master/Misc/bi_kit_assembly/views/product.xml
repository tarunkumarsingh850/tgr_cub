<odoo>
  <data>

    <record model="ir.ui.view" id="inventory_product_bom_inherit">
      <field name="model">product.template</field>
      <field name="name">product.template.details.form</field>
      <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
          <button type="object"
              name="action_view_bom"
              attrs="{'invisible':[('bom_number', '==', 0)]}"
              class="oe_stat_button"
              icon="fa-bars">
              <field name="bom_number" widget="statinfo"/>
          </button>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="inventory_product_master_bom_inherit">
      <field name="model">product.product</field>
      <field name="name">product.product.details.form</field>
      <field name="inherit_id" ref="stock.product_form_view_procurement_button"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
          <button type="object"
              name="action_view_bom"
              attrs="{'invisible':[('product_bom_number', '==', 0)]}"
              class="oe_stat_button"
              icon="fa-bars">
              <field name="product_bom_number" widget="statinfo"/>
          </button>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
