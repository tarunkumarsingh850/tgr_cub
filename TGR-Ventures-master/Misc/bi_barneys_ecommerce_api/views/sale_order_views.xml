<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Sale order form view customizations-->
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.odoo_ecommerce_api</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="sale_order_template_id" position="after">
                <field name="is_barneys_dropshipping" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="barneys_dropshipping_sale_action" model="ir.actions.act_window">
      <field name="name">Barneys Dropshipping Sale Orders</field>
      <field name="res_model">sale.order</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'default_is_barneys_dropshipping':True}</field>
      <field name="domain">[('is_barneys_dropshipping','=','True')]</field>
      <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">

          </p>
      </field>
  </record>

  <menuitem name="Barneys Dropshipping Sale Orders" id="menu_barneys_dropshipping_sale" sequence="3" parent="sale.sale_order_menu" action="barneys_dropshipping_sale_action"/>

</odoo>
