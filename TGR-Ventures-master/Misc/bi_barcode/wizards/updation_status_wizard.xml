<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="updation_status_wizard_view_form" model="ir.ui.view">
            <field name="name">updation.status.form</field>
            <field name="model">updation.status</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="message" widget="text" style="height: 100px;" readonly='1'/>
                        </group>
                        <footer>
                            <button string="OK" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
