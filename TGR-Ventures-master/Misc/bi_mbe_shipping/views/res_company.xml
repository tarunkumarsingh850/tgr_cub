<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mbe_credential_configuration" model="ir.ui.view">
        <field name="name">MBE Configuration</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="MBE Configuration">
                    <group>
                        <group>
                            <field name="mbe_api_username"/>
                            <field name="mbe_api_password"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
