<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_partner_view_taxjar">
            <field name="name">res.partner.view.taxjar</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='misc']" position="before">
                    <group string="TaxJar" name="taxjar" priority="5" groups="account.group_account_invoice">
                        <field name="ts_exemption_type"/>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>
